{
  "compilerOptions": {
    "target": "es2022",
    "module": "none",              
    "moduleResolution": "classic", 
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "removeComments": true,

    "types": [
      "node"
    ], 
    "skipLibCheck": true
  },
  "include": ["src"]
}
